<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Softer light background -->
    <solid android:color="#F7FAFF" />

    <!-- Rounded corners -->
    <corners android:radius="20dp" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#C7D7ED" />

    <!-- More spacious padding -->
    <padding
        android:left="24dp"
        android:top="24dp"
        android:right="24dp"
        android:bottom="24dp"/>

</shape>
